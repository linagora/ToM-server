RUN addgroup --system tom-server && \
          adduser --system -G tom-server tom-server

COPY --from=builder /build/node_modules ./node_modules/
COPY apps/tom-server/package.json tom-server/
COPY apps/tom-server/dist tom-server/dist/

RUN chown -R tom-server:tom-server .

