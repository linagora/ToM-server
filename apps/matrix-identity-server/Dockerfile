COPY packages/matrix-resolve/package.json node_modules/@twake-chat/matrix-resolve/

COPY packages/utils/dist node_modules/@twake-chat/utils/dist
COPY packages/utils/package.json node_modules/@twake-chat/utils/

# Runtime stage - clean minimal image
FROM node:18.20.8-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system matrix-identity-server && \
          adduser --system -G matrix-identity-server matrix-identity-server

COPY --from=builder /build/node_modules ./node_modules/
COPY apps/matrix-identity-server/package.json matrix-identity-server/
COPY apps/matrix-identity-server/dist matrix-identity-server/dist/

RUN chown -R matrix-identity-server:matrix-identity-server .

USER matrix-identity-server

CMD [ "node", "matrix-identity-server/dist/main.js" ]
