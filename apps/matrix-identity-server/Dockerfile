# Build stage - prepare dependencies and workspace packages
FROM node:18.20.8-alpine AS builder

WORKDIR /build

COPY package.json package-lock.json ./
RUN npm ci --omit=dev

# Copy workspace packages directly to node_modules
COPY packages/config-parser/dist node_modules/@twake-chat/config-parser/dist
COPY packages/config-parser/package.json node_modules/@twake-chat/config-parser/

COPY packages/crypto/dist node_modules/@twake-chat/crypto/dist
COPY packages/crypto/package.json node_modules/@twake-chat/crypto/

COPY packages/logger/dist node_modules/@twake-chat/logger/dist
COPY packages/logger/package.json node_modules/@twake-chat/logger/

COPY packages/matrix-identity-server/dist node_modules/@twake-chat/matrix-identity-server/dist
COPY packages/matrix-identity-server/package.json node_modules/@twake-chat/matrix-identity-server/

